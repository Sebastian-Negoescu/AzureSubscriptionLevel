{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "policyName": "restrict-virtual-machine-skus",
        "policyDisplayName": "_*Restrict Virtual Machines SKUs",
        "policyDescription": "Restrict allowed SKUs when creating/updating Virtual Machines"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyName')]",
            "properties": {
                "displayName": "[variables('policyDisplayName')]",
                "description": "[variables('policyDescription')]",
                "metadata": {
                    "category": "Compute"
                },
                "parameters": {
                    "listOfForbiddenSkus": {
                        "type": "array",
                        "metadata": {
                            "displayName": "List of allowed VM SKUs",
                            "description": "List of allowed SKUs for creating/updating a VM",
                            "strongType": "vmSKUs"
                        },
                        "defaultValue": ["Standard_G*"]
                    }
                },
                "policyType": "Custom",
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Compute/virtualMachines"
                            },
                            {
                                "field": "Microsoft.Compute/virtualMachines/sku.name",
                                "in": "[[parameters('listOfForbiddenSkus')]"
                            }
                        ]
                    },
                    "then": {
                        "effect": "Deny"
                    }
                }
            }
        }
    ],
    "outputs": {
        "restrictVirtualMachineSkusId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policyDefinitions', variables('policyName'))]"
        }
    }
}